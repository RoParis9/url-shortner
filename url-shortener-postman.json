              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/analytics/urls/{{url_id}}?startDate=2024-01-01&endDate=2024-01-31&groupBy=day",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "analytics", "urls", "{{url_id}}"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-01-31"
                },
                {
                  "key": "groupBy",
                  "value": "day"
                }
              ]
            },
            "description": "Get analytics data for a specific URL"
          }
        },
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
