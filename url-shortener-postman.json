    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "url_id",
      "value": "url123",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "user@example.com",
      "type": "string"
    },
    {
      "key": "user_password",
      "value": "password123",
      "type": "string"
    }
  ],
  "item": [
